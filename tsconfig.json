{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "lib"
  },
  "compileOnSave": true,
  "include": ["src"]
}
